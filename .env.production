# Asset Management - Production Environment Configuration
# Kopieren Sie diese Datei nach .env und passen Sie die Werte an

# Flask Configuration
FLASK_APP=app
FLASK_ENV=production
SECRET_KEY=GENERATE_A_STRONG_SECRET_KEY_HERE

# Database Configuration
# SQLite (Standard - für kleine Installationen)
DATABASE_URL=sqlite:///app.db

# PostgreSQL (empfohlen für Produktion)
# DATABASE_URL=postgresql://username:password@localhost:5432/asset_management

# Email Configuration (Gmail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Domain Configuration
DOMAIN=your-domain.de
PREFERRED_URL_SCHEME=https

# File Upload Configuration
UPLOAD_FOLDER=/path/to/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
PERMANENT_SESSION_LIFETIME=3600  # 1 Stunde

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/asset_management/app.log

# Backup Configuration
BACKUP_DIR=/path/to/backups
BACKUP_RETENTION_DAYS=30

# Application Specific Settings
APP_NAME="Asset Management"
APP_VERSION=1.0.0

# Development/Debug Settings (nur für Entwicklung aktivieren)
# FLASK_DEBUG=False  # Nicht in Produktion aktivieren!
# DEBUG=True        # Nicht in Produktion aktivieren!
